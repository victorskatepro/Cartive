<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    tools:context="com.victorsaico.cartive.Fragments.RegisterFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregistername"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:hint="Nombres"
            app:met_clearButton="true"
            app:met_iconRight="@drawable/ic_avatar"
            app:met_iconPadding="0dp"
            android:layout_marginBottom="10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregisteruserapellido"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:hint="Apellidos"
            app:met_clearButton="true"
            app:met_iconRight="@drawable/ic_avatar"
            app:met_iconPadding="0dp"
            android:layout_marginBottom="10dp"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregisterusername"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Username"
            app:met_iconRight="@drawable/ic_email"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregistercorreo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            app:met_iconRight="@drawable/ic_email"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregisterdni"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:digits="0123456789"
            android:hint="DNI"
            android:inputType="number"
            app:met_iconRight="@drawable/ic_email"

            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregisterpass"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:hint="Contraseña"
            app:met_iconRight="@drawable/ic_lock"
            android:layout_marginBottom="30dp"
            app:met_minCharacters="5"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtregisterpass2"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:layout_gravity="center"
            android:hint="Repita Contraseña"
            app:met_iconRight="@drawable/ic_lock"
            android:layout_marginBottom="30dp"
            app:met_minCharacters="5"
            />
        <Button
            android:id="@+id/btnregistrar"
            android:layout_width="286dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/buttonborder"
            android:text="Register"
            android:textColor="@color/primary_light"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>
</ScrollView>

</android.support.v7.widget.CardView>
